<section
    id="translate"
    class="c-prompt"
    data-prompt
    aria-labelledby="title-translate"
    role="region">

    <div class="c-prompt__content">
        <h2
            id="title-translate"
            class="c-prompt__title">
            {{content.translate.title}}
        </h2>
        <p class="c-prompt__directions">
            {{{content.translate.directions}}} <a rel="external noopener" class="c-prompt__undo" href="">How to undo</a>
        </p>
        <p class="c-prompt__example">
            {{{content.translate.example}}}
        </p>
    </div>
</section>
